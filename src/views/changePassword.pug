extends layouts/main

block content
    .changePassword__container
        .form__container
            form(action=`/user${routes.changePassword}`, method="post")
                input(type="password", name="oldPassword", placeholder="Current Password", required=true)
                input(type="password", name="newPassword1", placeholder="New Password", required=true)
                input(type="password", name="newPassword2", placeholder="Verify New Password", required=true)
                input(type="submit", value="Change Password")